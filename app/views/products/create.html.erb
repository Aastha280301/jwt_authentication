<%= hidden_field_tag :token, value: @token %>

<h1>Product List</h1>
<ul>
  <% if @product.present? %>
      <li><%= @product.products_name %></li>
      <p>Price: <%= @product.price %></p>
  <% else %>
    <p>No products found.</p>
  <% end %>
  <%= link_to 'Create product', new_product_path, class: "btn btn-primary" %>
</ul>
