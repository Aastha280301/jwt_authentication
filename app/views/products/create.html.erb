<%= hidden_field_tag :token, value: @token %>

<h1>Product List</h1>
<ul>
  <% if @products.present? %>
    <% @products.each do |product| %>
      <li><%= product.product_name %></li>
      <p>Price: <%= product.price %></p>
    <% end %>
  <% else %>
    <p>No products found.</p>
  <% end %>
  <%= link_to 'Create product', new_product_path, class: "btn btn-primary" %>
</ul>
