<div>
  <h2>Search Results for "<%= params[:product][:product_id] %>":</h2>
  <center><% if @results.any? %>
    <table class="table"; border= 2px >
      <thead>
        <tr>
          <th>Product Name</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @results.each do |product| %>
          <tr>
            <td><%= product.products_name %></td>
            <td><%= product.price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No products found.</p>
  <% end %>
  </center>
</div>