<h1>Product List</h1>

<% if @product.present? %>
  <table>
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @product.products_name %></td>
        <td><%= @product.price %></td>
      </tr>
    </tbody>
  </table>

  <h2>Ratings</h2>
  <table>
    <thead>
      <tr>
        <th>Rating Value</th>
        <th>Comment</th>
      </tr>
    </thead>
    <tbody>
      <% @product.ratings.each do |rating| %>
        <tr>
          <td><%= rating.rating_value %></td>
          <td><%= rating.comment %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No products found.</p>
<% end %>