
<%= form_for @rating do |f| %>

  <div class="field" style="margin-bottom: 8px;">
    <%= f.label :rating_value %>
    <%= f.text_field :rating_value %>
  </div>

  <div class="field" style="margin-bottom: 8px;">
    <%= f.label :comment %>
    <%= f.text_field :comment %>
  </div>

  <div class="field" style="margin-bottom: 8px;">
    <%= f.label :product_id %>
    <%= f.collection_select(:product_id, Product.all, :id, :products_name, include_blank: 'Select a Product') %>
  </div>

  <div class="field" style="margin-bottom: 8px;">
    <%= f.label :user_id %>
    <%= f.collection_select(:user_id, User.all, :id, :username, include_blank: 'Select a User') %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>