<h1>Please enter email and password</h1>

<%= form_with model: @user, url: auth_login_path, method: :post do |form| %>
  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit "login" %>
  </div>
<% end %>

